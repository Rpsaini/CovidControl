<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="@color/white_color"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:gravity="center"
        style="@style/textsize24"
        android:textColor="@color/colorPrimary"
        ></TextView>

    <TextView
        android:padding="5dp"
        android:id="@+id/quarantine_message"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        style="@style/textsize20"
        android:text="@string/quarantin_exit"
        ></TextView>





    <TextView
        android:id="@+id/quarantine_ok"
        android:layout_marginTop="10dp"
        style="@style/textsize20"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_drawable"
        android:gravity="center"
        android:text="Ok"
        android:textColor="@color/white_color"></TextView>


</LinearLayout>