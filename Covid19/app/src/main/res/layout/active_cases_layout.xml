<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_activecasesouter"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_innertransalation"
        android:background="@drawable/white_drawable_with_bottom_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punjab"
        android:gravity="center"
        android:textColor="@color/white_color"
        style="@style/textsize20"
        ></TextView>

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real time Crona statistics"
            android:gravity="center"
            android:textColor="@color/white_color"
            style="@style/textsize16"
            ></TextView>







    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                style="@style/textsize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tested"
                android:textColor="@color/white_color"></TextView>
        <TextView
            android:id="@+id/crona_tested"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/white_color"
            style="@style/textsize24"
            ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                style="@style/textsize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Confirmed"
                android:textColor="@color/white_color"></TextView>
            <TextView
                android:id="@+id/crona_confirmed"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/white_color"
                style="@style/textsize24"
                ></TextView>
        </LinearLayout>
    </LinearLayout>


<!--        //Secound-->



        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recovered"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView
                    android:id="@+id/crona_recovered"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deaths"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView
                    android:id="@+id/crona_death"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>



<!--        third-->


        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result Awaited"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView
                    android:id="@+id/crona_resultawait"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView

                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result Nagative"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView
                    android:id="@+id/crona_resultnegative"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


<!--        foour-->


        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital Quarantine"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView

                    android:layout_marginBottom="2dp"
                    android:id="@+id/crona_hospitalized"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_round"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Quarantine"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize14"
                    ></TextView>
                <TextView
                    android:id="@+id/crona_homequarantine"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/textsize20"
                    ></TextView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@drawable/corner_round"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                style="@style/textsize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Active Cases In SAS Nagar"
                android:textColor="@color/colorPrimary"></TextView>


            <TextView
                android:id="@+id/crona_sasnagar"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                style="@style/textsize20"
                ></TextView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>