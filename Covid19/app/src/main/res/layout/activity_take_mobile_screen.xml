<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@android:color/transparent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout

                android:orientation="horizontal"
                android:id="@+id/creditum_icon"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="50dp"
                    ></ImageView>

                <TextView
                    android:layout_marginTop="50dp"
                    android:paddingLeft="10dp"
                    android:gravity="left|center"
                    android:textColor="@color/white_color"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/app_name"
                    android:textSize="20dp"

                    ></TextView>
            </LinearLayout>






            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/creditum_icon"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/login_text"
                    android:layout_below="@+id/creditum_icon"
                    android:paddingLeft="30dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:text="@string/smscontent"
                    style="@style/textsize16"
                    android:inputType="textMultiLine"
                    ></TextView>


                <RelativeLayout
                    android:background="@drawable/edittext_drawble"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >


                    <TextView
                        android:id="@+id/mobilenumber_text"
                        style="@style/textsize16"
                        android:layout_width="322dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:hint="Enter Mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/hinttextcolor"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/photoid"
                        ></ImageView>

                    <View
                        android:id="@+id/viewfullwidth"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/colorPrimary"
                        android:layout_alignParentBottom="true"
                        ></View>
                    <View
                        android:id="@+id/viewhalfwidth"
                        android:layout_width="100dp"
                        android:layout_height="3dp"
                        android:background="@color/buttonborder"
                        android:layout_alignParentBottom="true"
                        ></View>

                    <ImageView
                        android:id="@+id/backarrow"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:padding="15dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/uparrow"
                        android:tint="@color/white_color"
                        android:rotation="-90"
                        ></ImageView>
                </RelativeLayout>














                //=============


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/one"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="1"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/two"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="2"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/three"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="3"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>
                    </LinearLayout>


                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/four"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="4"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/five"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="5"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/six"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="6"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/seven"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="7"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/eight"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="8"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>

                        <TextView
                            android:id="@+id/nine"
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:text="9"
                            android:textStyle="bold"
                            style="@style/textsize24"
                            android:gravity="center"
                            android:textColor="@color/white_color"
                            ></TextView>
                    </LinearLayout>



                    <TextView
                        android:id="@+id/zero"
                        android:layout_height="60dp"
                        android:layout_width="100dp"
                        android:text="0"
                        android:textStyle="bold"
                        style="@style/textsize24"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white_color"
                        ></TextView>



                    <TextView
                        android:id="@+id/verify"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button_drawable"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_height="60dp"
                        android:text="Verify"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        style="@style/textsize22"
                        ></TextView>




                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>