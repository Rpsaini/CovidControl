<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="#f4f4f4"
    android:layout_height="wrap_content">


    <ImageView
android:visibility="gone"
        android:layout_width="41dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/covidhome"></ImageView>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Apply e-Pass"
        android:gravity="center"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        ></TextView>





    <TextView
        android:visibility="gone"
        android:text=" New App version available please update it."
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        android:id="@+id/successtext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        ></TextView>


    <TextView
        android:id="@+id/paasforchandigarh"
        android:text="Apply Curfew pass"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:textColor="@color/textcolorsolor"
        ></TextView>

    <View
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:background="@color/button_blue_color"
        android:layout_height="1dp"
        ></View>



    <TextView
        android:visibility="gone"
        android:id="@+id/passforpunjab"
        android:text="Punjab Curfew pass"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        ></TextView>

    <View
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:background="@color/button_blue_color"
        android:layout_height="1dp"
        ></View>






</LinearLayout>