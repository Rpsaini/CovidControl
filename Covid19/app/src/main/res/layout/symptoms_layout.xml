<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/login_text"
        style="@style/textsize16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creditum_icon"
        android:layout_gravity="bottom"
        android:inputType="textMultiLine"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Symptoms Information"
        android:textColor="@color/white_color"></TextView>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:buttonTint="@color/white_color"
            android:id="@+id/radio_fever"
            android:layout_width="49dp"
            android:layout_height="40dp"></CheckBox>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fever"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:buttonTint="@color/white_color"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/radio_caugh"
            ></CheckBox>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cough"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:buttonTint="@color/white_color"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/radio_breath"
            ></CheckBox>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breath Difficulty"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/verify"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_drawable"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="55dp"
        android:text="Report"
        android:gravity="center"
        android:textColor="@color/white_color"
        style="@style/textsize22"
        ></TextView>


</LinearLayout>