<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        style="@style/textsize16"
        android:textColor="@color/white_color"
        ></TextView>

    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/cursordrawable"
            android:id="@+id/house"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:hint="House Number"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></EditText>

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/cursordrawable"
            android:id="@+id/buildingname"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:hint="Building name"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></EditText>


        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/cursordrawable"
            android:id="@+id/streename"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:hint="Street name"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></EditText>


        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>



    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <EditText
            android:textCursorDrawable="@drawable/cursordrawable"
            android:id="@+id/city"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:hint="City"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></EditText>


        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>



    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <Spinner
            android:id="@+id/district"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"
            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></Spinner>


        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/uparrow"
            android:layout_alignParentEnd="true"
            android:tint="@color/white_color"
            android:padding="7dp"
            android:rotation="180"
            ></ImageView>
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/edittext_drawble"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <Spinner
            android:id="@+id/taluka"
            style="@style/textsize16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center|left"

            android:maxLength="50"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/hinttextcolor"
            ></Spinner>


        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/buttonborder"
            android:layout_alignParentBottom="true"
            ></View>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/uparrow"
            android:layout_alignParentEnd="true"
            android:tint="@color/white_color"
            android:padding="7dp"
            android:rotation="180"
            ></ImageView>
    </RelativeLayout>
</LinearLayout>
