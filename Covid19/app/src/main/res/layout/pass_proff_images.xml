<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proof Images"
        style="@style/textsize16"
        android:textColor="@color/white_color"
        ></TextView>



    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="0"
            android:id="@+id/idprooffront"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/upload_image"
            ></ImageView>

        <TextView
            android:gravity="center|left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Attach ID Proof front"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="0"
            android:id="@+id/idproofback"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/upload_image"
            ></ImageView>

        <TextView
            android:gravity="center|left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Attach ID Proof back"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="0"
            android:id="@+id/supportingdocument"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/upload_image"
            ></ImageView>

        <TextView
            android:gravity="center|left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Supporting document"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="0"
            android:id="@+id/profilepic"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/upload_image"
            ></ImageView>

        <TextView

            android:gravity="center|left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upload your photo"
            style="@style/textsize16"
            android:textColor="@color/white_color"
            ></TextView>

    </LinearLayout>




</LinearLayout>