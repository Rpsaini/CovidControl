            <View
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="@color/buttonborder"
                android:layout_alignParentBottom="true"
                ></View>
        </RelativeLayout>





        <RelativeLayout
            android:background="@drawable/edittext_drawble"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <EditText
                android:textCursorDrawable="@drawable/cursordrawable"
                android:id="@+id/pass_mobile"
                style="@style/textsize16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:hint="Mobile"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:textColor="@color/white_color"
                android:textColorHint="@color/hinttextcolor"
                ></EditText>


            <View
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="@color/buttonborder"
                android:layout_alignParentBottom="true"
                ></View>
        </RelativeLayout>




        <RelativeLayout
            android:background="@drawable/edittext_drawble"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <EditText
                android:textCursorDrawable="@drawable/cursordrawable"
                android:id="@+id/pass_frompalace"
                style="@style/textsize16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
