<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@drawable/white_drawable_with_upper_round"
    android:layout_height="wrap_content">


    <TextView
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Update App"
        android:gravity="center|left"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        android:background="@color/white_color"
        ></TextView>


    <ImageView
        android:visibility="gone"
        android:tint="@color/white_color"
        android:rotation="180"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        ></ImageView>


    <ImageView

        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_gravity="center"
        android:src="@drawable/covidhome"
        ></ImageView>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Update App"
        android:gravity="center"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/white_color"
        ></TextView>


    <View
        android:alpha=".5"
        android:background="@color/white_color"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        ></View>


    <TextView
        android:visibility="gone"
        android:text=" New App version available please update it."
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        android:id="@+id/successtext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        ></TextView>


    <TextView

        android:text="New App version is ready for download."
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        ></TextView>


    <TextView
        android:visibility="gone"
        android:id="@+id/newUpdateText"
        android:text=""
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:textSize="13dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white_color"
        ></TextView>






    <TextView

        android:layout_marginBottom="10dp"
        android:id="@+id/updatenow"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:text="Download"
        android:background="@drawable/round_button_drawable"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        ></TextView>



</LinearLayout>